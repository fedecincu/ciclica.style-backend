<h2 class="mb-4">Catálogo</h2>

{{#if buscado}}
  <p class="text-light">Resultados para: <strong>{{buscado}}</strong></p>
  <a href="/admin/administrador/catalogo" class="btn btn-secondary btn-sm mb-3">Volver al catálogo completo</a>
{{/if}}

<a href="/admin/administrador/catalogo/agregar" class="btn btn-success mb-3">Agregar producto</a>

<table class="table table-dark table-striped align-middle text-center">
  <thead>
    <tr>
      <th>ID</th>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
    <tr>
      <td>{{id}}</td>
      <td>
        {{#if imagen}}
          <img src="{{imagen}}" alt="{{nombre}}" style="max-width:80px; max-height:80px; object-fit:cover;" />
        {{else}}
          <span class="text-muted">-</span>
        {{/if}}
      </td>
      <td>{{nombre}}</td>
      <td>{{descripcion}}</td>
      <td>${{precio}}</td>
      <td>
        <a href="/admin/administrador/catalogo/editar/{{id}}" class="btn btn-warning btn-sm">Editar</a>
        <a href="/admin/administrador/catalogo/eliminar/{{id}}" class="btn btn-danger btn-sm"
           onclick="return confirm('¿Seguro que querés eliminar este producto?');">
          Eliminar
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
